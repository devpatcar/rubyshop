<!DOCTYPE html>
<html>
  <head>
    <title>Ruby Shop</title>
    <%= csrf_meta_tags %>
			<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all',
                                              'data-turbolinks-track': 'reload' %>																					
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/shim' %>  
  </head>
  <body class='<%= controller.controller_name %>'>
  <!-- Wrapper -->

<div id="wrapper">
				<!-- Header -->
					<header id="header">
						<div class="inner">

							<!-- Logo -->
								<%= link_to store_path , :class => 'logo' do %>
									<span class="symbol"><%= image_tag "logo.svg" %></span><span class="title">RubyShop</span>
								<% end %>

							<!-- Nav -->
								<nav>
									<ul>
										<li><a href="#menu">Menu</a></li>									
									</ul>
								</nav>

						</div>
					</header>

				<!-- Menu -->
					<nav id="menu">
						<h2>Menu</h2>
						<ul>
						   <% if logged_in? %>   
									<li>
									<%= link_to "Admin", '/admin/products' %>
								</li> 
									<li>
									<%= button_to "Log out", logout_path, method: :delete %>
								</li> 
								<% else %>
								<li><%= link_to "Shop", store_path %></li>	
								<li><%= link_to "Log in", login_path %></li>
								<% end %> 						           
						</ul>
					</nav>

				<!-- Main -->
					<div id="main">
						<div class="inner">
							<header>
								<h1>Welcome to the RubyShop</h1>								
                <p id="notice"><%= notice %></p> 
              </header>
              <section>
                <% if @cart %>   
                  <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>    
                    <%= render @cart %> 
                  <% end %>
                <% end %>                   
              </section>
    <%= yield %>
    	</div>
					</div>
				<!-- Footer -->
					<footer id="footer">
						<div class="inner">														
							<ul class="copyright">
								<li>&copy; RubyShop. All rights reserved</li>
							</ul>
						</div>
					</footer>
			</div>				
	</body>  
</html>
