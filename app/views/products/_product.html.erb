
<table> 

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><img src=<%= product.image %> /></td>
        <td><%= product.price %></td>
        <td><%= product.stock %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Add to cart', '#' %></td>       
      </tr>
    <% end %>
  </tbody>
</table>