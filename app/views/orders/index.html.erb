<p id="notice"><%= notice %></p>
<h1>Orders</h1>
<div class="table-responsive">
<table class="table">
<thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>  
      <th>Status</th>    
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.order_status.name %></td>
        <td><%= link_to 'Show', order, :class => 'btn btn-default' %></td>
        <% if order.order_status.id == 1 %>
        <td><%= link_to 'Edit', edit_order_path(order), :class => 'btn btn-default' %></td>        
        <td><%= button_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>        
        <td><%= button_to 'Deliver', {:controller => "orders", :action => "deliver", :id => order.id}, method: :post, data: { confirm: 'Are you sure?' }, :class => 'btn btn-success' %></td>   
        <% end %>    
      </tr>
    <% end %>
  </tbody>
</table>
</div>



